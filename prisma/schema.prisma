generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  nom            String
  prenom         String
  email          String   @unique
  password       String
  role           Role     @default(USER)
  emailVerified  Boolean  @default(false)
  verifyToken    String?
}

enum Role {
  USER
  ADMIN
}
